@model FuncionarioModel

<h1>Editar Funcionário</h1>

<form asp-action="Update" method="post">

    <div class="form-group">
        <label>Id:</label>
        <input asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Nome:</label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sobrenome:</label>
        <input asp-for="Sobrenome" class="form-control" />
    </div>

    <div class="form-group">
        <label>Sexo:</label>
        <input asp-for="Sexo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cpf:</label>
        <input asp-for="Cpf" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rg:</label>
        <input asp-for="Rg" class="form-control" />
    </div>

    <div class="form-group">
        <label>Telefone:</label>
        <input asp-for="Telefone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Endereco:</label>
        <input asp-for="Endereco" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cep:</label>
        <input asp-for="Cep" class="form-control" />
    </div>

    <div class="form-group">
        <label>Bairro:</label>
        <input asp-for="Bairro" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cidade:</label>
        <input asp-for="Cidade" class="form-control" />
    </div>

    <div class="form-group">
        <label>Uf:</label>
        <input asp-for="Uf" class="form-control" />
    </div>

    <div class="form-group">
        <label>Complemento:</label>
        <input asp-for="Complemento" class="form-control" />
    </div>

    <div class="form-group">
        <label>Numero:</label>
        <input asp-for="Numero" class="form-control" />
    </div>

    <div class="form-group">
        <label>Data Nascimento:</label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label>Data Admissao:</label>
        <input asp-for="DataAdmissao" class="form-control" type="date" />
    </div>
 
    <!-- Setor -->
    <div class="form-group">
        <label asp-for="SetorId" class="col-sm col-form-label">Setor:</label>
        <select asp-for="SetorId" class="form-control" asp-items="@ViewBag.Setor"></select>
        <span asp-validation-for="SetorId" class="text-danger"></span>
    </div>
    <!-- Fim - Setor-->

    <!-- Cargo -->
    <div class="form-group">
        <label asp-for="CargoId" class="col-sm col-form-label">Cargo:</label>
        <select asp-for="CargoId" class="form-control" asp-items="@ViewBag.Cargo"></select>
        <span asp-validation-for="CargoId" class="text-danger"></span>
    </div>
    <!-- Fim - Cargo -->

    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
