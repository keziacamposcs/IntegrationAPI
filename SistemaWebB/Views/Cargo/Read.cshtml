@model CargoModel

<h1>Detalhes do Cargo</h1>

<ul>
    <li><strong>Id:</strong> @Model.Id</li>
    <li><strong>Cargo:</strong> @Model.Cargo</li>
</ul>

<a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>
<br />
<form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Tem certeza que deseja excluir este cargo?');">
    <button type="submit" class="btn btn-danger">Excluir</button>
</form>
